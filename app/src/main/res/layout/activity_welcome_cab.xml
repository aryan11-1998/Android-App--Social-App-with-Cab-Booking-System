<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorProfile"
    tools:context=".WelcomeCabActivity">

    <ImageView
        android:id="@+id/imageViewcab"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="73dp"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/welcome_driver_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewcab"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:background="@drawable/button"
        android:text="I am a Driver"
        android:textSize="18sp" />

    <Button
        android:id="@+id/welcome_customer_btn"
        android:background="@drawable/button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_driver_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="18sp"
        android:text="I am a Customer" />
</RelativeLayout>