<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorProfile"
    tools:context=".ContactNumberActivity">

    <ImageView
        android:id="@+id/imageViewcab"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="73dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/Contact_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/imageViewcab"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/inputs"
        android:hint="Name"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/Contact_Phone"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/Contact_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/inputs"
        android:hint="Mobile Number"
        android:inputType="phone"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/texte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register As"
        android:layout_below="@+id/Contact_Phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/button"
        android:textSize="22sp">

    </TextView>
    <Button
        android:id="@+id/contactCustomerBtn"
        android:background="@drawable/button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texte"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:text="Customer" />
    <Button
        android:id="@+id/contactDriverBtn"
        android:background="@drawable/button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactCustomerBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:text="Driver" />



</RelativeLayout>